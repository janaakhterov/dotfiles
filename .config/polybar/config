[colors]
alert = #bd2c40
background = #FF111111
background-alt = #444444
col = #0000ff
foreground = #A8A19F
foreground-alt = #555555
primary = #D5911A
secondary = #6666EA

[bar/top]
background = ${colors.background}
border-color = #00000000
border-size = 0
fixed-center = true
font-0 = Hack:size=12;1
; font-0 = "Fantasque Sans Mono:pixelsize=12;2"
font-1 = "Material Icons:size=13;4"
foreground = ${colors.foreground}
height = 24
line-color = #F22C40
line-size = 3
module-margin-left = 1
module-margin-right = 0
modules-center = time
modules-left = powermenu i3
modules-right = cpu memory volume date
monitor = 
padding-left = 0
padding-right = 0
scroll-down = i3wm-wsprev
scroll-up = i3wm-wsnext
tray-padding = 0
tray-position = right
width = 100%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
label-focused = %name%
label-focused-background = #2C2A29
label-focused-padding = 2
label-focused-underline = #FFA500
label-mode-background = #D5911A
label-mode-foreground = #000
label-unfocused = %index%
label-unfocused-background = #111111
label-unfocused-padding = 2
label-unfocused-underline = #407EE7
label-urgent = %index%
label-urgent-background = #F95C5C
label-urgent-padding = 2
label-visible = %index%
label-visible-background = #222222
label-visible-padding = 1
label-visible-underline = #407EE7
wrapping-scroll = false

[module/cpu]
type = internal/cpu
format = "%{F#C50000}<ramp-coreload>"
interval = .5
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █

[module/memory]
type = internal/memory
format = " <label> "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #00AD9C
interval = 2
label = "%gb_used%"

[module/time]
type = internal/date
format-underline = #407EE7
interval = 5
label = "%time%"
time = "%I:%M%p"

[module/date]
type = internal/date
date = "%a, %b %d, %Y"
format-underline = #407EE7
interval = 5
label = "%date%"
time = "%I:%M%p"

[module/volume]
type = internal/pulseaudio
bar-volume-empty = =
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}
bar-volume-fill = =
bar-volume-fill-font = 2
bar-volume-foreground-0 = #5AB738
bar-volume-foreground-1 = #5AB738
bar-volume-foreground-2 = #5AB738
bar-volume-foreground-3 = #5AB738
bar-volume-foreground-4 = #5AB738
bar-volume-foreground-5 = #5AB738
bar-volume-foreground-6 = #F22C40
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-width = 10
format-muted-foreground = ${colors.foreground-alt}
format-muted-prefix = " "
format-volume = "VOL <bar-volume>"
label-muted = sound muted
label-volume-foreground = ${root.foreground}

[module/powermenu]
